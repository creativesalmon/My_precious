<div class="login-page">
  <div class="form">
    <!--숨겨진 가입창-->
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name),html: {class: :register_form })do |f| %>
    <h2>Sign up</h2>
      <%= devise_error_messages! %>
    
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, placeholder: "email" %>
      </div>
    
      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off" , placeholder: "password"%>
      </div>
    
      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" , placeholder: "password_confirmation"%>
      </div>
      <div class="field">
        <%= f.label :이름 %><br />
        <%= f.text_field :username, autocomplete: "off" , placeholder: "이름"%>
      </div>
      <div class="field">
        <%= f.label :학번 %><br />
        <%= f.text_field :s_num, autocomplete: "off" , placeholder: "학번"%>
      </div>
      <div class="field">
        <%= f.label :전화번호 %><br />
        <%= f.telephone_field :p_num, autocomplete: "off" , placeholder: "eg: (000) 000-0000", :required => true, :data => {:mask=> '999-999-9999'}%>
      </div>
      <div class="field">
          <%= f.radio_button :gender, 1  %> 
          <%= label :contactmethod_email, '남성' %>
          <%= f.radio_button :gender, 2 %>
          <%= label :contactmethod_sms, '여성' %>
      </div>
    
      <div class="actions">
        <%= f.button "Sign up" %>
      </div>
      <p class="message">Already registered? <a href="#">Sign In</a></p>
    <% end %>
    <!--이제 부터 로그인-->
    <%= form_for(resource, as: resource_name, url: session_path(resource_name),html: {class: :login_form }) do |f| %>
    <h2>Log in</h2>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, placeholder: "email" %>
      </div>
    
      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off", placeholder: "password" %>
      </div>
    
      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>
    
      <div class="actions">
        <%= f.button "Log in" %>
      </div>
      <p class="message">Not registered? <a href="#">Create an account</a></p>
    <% end %>
    
    <%= render "devise/shared/links" %>
  </div>
</div>


<script>$('.message a').click(function(){
   $('form').animate({height: "toggle", opacity: "toggle"}, "slow");
});</script>